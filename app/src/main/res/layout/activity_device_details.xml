<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E1A47"
    android:padding="8dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<!-- Toolbar -->
<com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#2E1A47"
    android:elevation="4dp"
    app:title="Device Details"
    app:titleTextColor="#F4F1FA" />

<!-- Device Info Card -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#B9A6E8">  <!-- Light Purple (30%) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“± Device Information"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Device Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Device Name:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Unknown Device"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- IP Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IP Address:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deviceIp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="192.168.1.1"
                android:textColor="#2E1A47"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- MAC Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MAC Address:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deviceMac"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="00:1A:2B:3C:4D:5E"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Vendor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manufacturer:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deviceVendor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Unknown"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Device Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Device Type:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deviceType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Unknown"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<!-- Connection Info Card -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#B9A6E8">  <!-- Light Purple (30%) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“¡ Connection Information"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/connectionStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Connected"
                android:textColor="#A8E6CF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- First Seen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="First Seen:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/firstSeen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="2024-01-15 10:30"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Last Seen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Seen:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lastSeen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="2024-01-20 14:45"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Signal Strength -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Signal Strength:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/signalStrength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="-65 dBm"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<!-- Network Info Card -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#B9A6E8">  <!-- Light Purple (30%) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŒ Network Information"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Subnet -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subnet:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/subnetInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="192.168.1.0/24"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Gateway -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gateway:"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gatewayInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="192.168.1.1"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<!-- Ping Test Card -->
<com.google.android.material.card.MaterialCardView
    android:id="@+id/pingTestCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#B9A6E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Ping Test"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Progress Indicator -->
        <ProgressBar
            android:id="@+id/pingProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:visibility="gone"
            android:progressTint="#A8E6CF"
            android:layout_marginBottom="8dp" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/pingProgressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#333333"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Result Display -->
        <TextView
            android:id="@+id/pingResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to test ping (tap &amp; hold for advanced test)"
            android:textColor="#2E1A47"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="12dp"
            android:background="#F4F1FA"
        android:layout_marginTop="8dp" />

        <!-- Quick Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Quick test: Tap | Advanced: Tap &amp; hold"
            android:textColor="#666666"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

<!-- Port Scan Card -->
<com.google.android.material.card.MaterialCardView
    android:id="@+id/portScanCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:layout_marginBottom="24dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#B9A6E8">  <!-- Light Purple (30%) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” Port Scanner"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to scan common ports"
            android:textColor="#2E1A47"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="12dp"
        android:background="#F4F1FA"
        android:layout_marginTop="8dp" />

        <!-- Coming Soon Badge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMING SOON"
            android:textColor="#F4F1FA"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="#A8E6CF"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

</LinearLayout>
    </androidx.core.widget.NestedScrollView>